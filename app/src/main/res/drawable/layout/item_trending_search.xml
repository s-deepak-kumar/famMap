<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/trendingSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/secondary_icon_color"
        android:background="@drawable/item_trending_bg"
        android:gravity="center"
        app:drawableLeftCompat="@drawable/ic_hashtag"
        app:drawableTint="@color/secondary_icon_color"
        android:drawablePadding="5dp"/>

</LinearLayout>