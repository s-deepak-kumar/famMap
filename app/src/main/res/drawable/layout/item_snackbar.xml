<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bk"
            android:padding="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/titleSnackbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="File Added To Download!"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/goToDownloadActivity"
                android:background="@drawable/button_bk_white"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="GO"
                android:textStyle="bold"
                android:textColor="@color/secondary_icon_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>